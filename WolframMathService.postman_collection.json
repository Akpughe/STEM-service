  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set base URL if not already set",
          "if (!pm.environment.get(\"base_url\")) {",
          "    pm.environment.set(\"base_url\", \"http://localhost:8000\");",
          "}",
          "",
          "// Generate a random quiz ID for testing",
          "if (!pm.environment.get(\"quiz_id\")) {",
          "    pm.environment.set(\"quiz_id\", \"quiz_\" + Math.random().toString(36).substring(2, 15));",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "quiz_id",
